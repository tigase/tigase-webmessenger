<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<servlet>
		<servlet-name>shell</servlet-name>
		<servlet-class>com.google.gwt.dev.shell.GWTShellServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>proxy</servlet-name>
		<servlet-class>de.spieleck.servlets.ProxyServlet
		</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>remotePath</param-name>
			<param-value>/bosh</param-value>
		</init-param>
		<init-param>
			<param-name>remoteServer</param-name>
			<param-value>messenger.tigase.org</param-value>
		</init-param>
		<init-param>
			<param-name>remotePort</param-name>
			<param-value>80</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>proxy</servlet-name>
		<url-pattern>/bosh/*</url-pattern>
	</servlet-mapping>
	


	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Tigase_messenger.html</welcome-file>
	</welcome-file-list>



</web-app>
